
class Solution {
public:
   int find_steps(vector<int>nums,int index,int n){

if(index == n-1) return 0;
if(nums[index] == 0) return 1e7;

int ans = 1e7;
for(int i =1 ;i<= nums[index] ;i++){
  if(index+i < n)
   ans =1+min(ans,find_steps(nums,index+i,n));
 }
return (ans >100000 ? 0 : ans);
}

int jump(vector<int>nums){
 return find_steps(nums,0,nums.size());
}
};
