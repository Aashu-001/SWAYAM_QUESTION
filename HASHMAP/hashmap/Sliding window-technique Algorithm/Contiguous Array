class Solution {
public:
    int findMaxLength(vector<int>& nums) {
       unordered_map<int,int>mp;
       int sum =0;
       mp[sum] = -1;
       int mx_len  = 0;
       for(int i =0;i<nums.size();i++){
        if(nums[i] == 0){
            sum = sum-1;
        }
        else{
            sum = sum+1;
        }
        if(mp.count(sum)){
            mx_len = max(mx_len,i-mp[sum]);
        }
        else{
            mp[sum] = i;
        }
       }
       return mx_len;
    }
};
