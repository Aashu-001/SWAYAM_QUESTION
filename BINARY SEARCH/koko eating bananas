class Solution {
public:
    
    int minEatingSpeed(vector<int>& piles, int h) {
      int low = 1;
      int high = INT_MIN;
      for(int p:piles){
           high = max(high,p);
      }
      int ans;
      while(low<=high){
        int mid = low + (high-low)/2;
        long long count=0;

        //count the no of hours if mid is the eating rate
         for (int p : piles) {
                count += (p + mid - 1) / mid; // Equivalent to ceil(p / mid)
            }
        if(count <= h){
            ans = mid;
            high = mid-1;
        }
        else if(count > h){
            low = mid+1;
        }
      
     }
     return ans;
    }
};
