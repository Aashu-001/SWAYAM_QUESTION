class Solution {
  public:
    int lowerBound(vector<int>& arr, int target) {
        int beg = 0;
        int end = arr.size()-1;
        int ans = arr.size();
        while(beg <= end){
            int mid = (beg+end)/2;
            
            if(arr[mid] >= target){
                ans = mid;
                end  = mid-1;
            }
            else {
                beg = mid+1;
            }
        }
        return ans;
        
    }
};
